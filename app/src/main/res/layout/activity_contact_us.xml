<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ContactUsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We'd love to hear from you"
            style="@style/headerStyle"
            android:layout_marginTop="24dp"
            android:id="@+id/txt_invite_head"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_invite_head"
            android:layout_marginTop="16dp"
            android:id="@+id/txt_invite_body"
            android:padding="16dp"
            android:background="@color/white2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textStyle"
                android:text="For all kind of queries related to course, zenclass and other platform related information"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_invite_body"
            android:padding="16dp"
            android:id="@+id/email_container"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:drawablePadding="16dp"
                style="@style/contactViaStyle"
                android:id="@+id/txt_email"
                app:drawableStartCompat="@drawable/ic_email"
                app:drawableTint="@color/black"
                app:drawableEndCompat="@drawable/ic_arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_container"
            android:id="@+id/txt_reply_body"
            android:padding="16dp"
            android:background="@color/white2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textStyle"
                android:text="You will get a reply back us within 48 hours"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_reply_body"
            android:padding="16dp"
            android:id="@+id/chat_container"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chat with us (9AM - 9PM)"
                android:drawablePadding="16dp"
                style="@style/contactViaStyle"
                android:id="@+id/txt_chat"
                app:drawableStartCompat="@drawable/ic_chat"
                app:drawableTint="@color/black"
                app:drawableEndCompat="@drawable/ic_arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_container"
            android:padding="16dp"
            android:id="@+id/follow_container"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow us"
                android:drawablePadding="16dp"
                style="@style/contactViaStyle"
                android:id="@+id/txt_follow"
                android:layout_alignParentStart="true"
                app:drawableStartCompat="@drawable/ic_share"
                app:drawableTint="@color/black"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                >
                <ImageView
                    style="@style/follow_social_icon"
                    android:src="@drawable/ic_facebook"
                    />
                <ImageView
                    style="@style/follow_social_icon"
                    android:src="@drawable/ic_instagram"
                    />
                <ImageView
                    style="@style/follow_social_icon"
                    android:src="@drawable/ic_twitter"
                    />
                <ImageView
                    style="@style/follow_social_icon"
                    android:src="@drawable/ic_telegram"
                    />

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visit us"
            style="@style/headerStyle"
            android:layout_marginTop="24dp"
            android:layout_below="@id/follow_container"
            />

    </RelativeLayout>
</ScrollView>