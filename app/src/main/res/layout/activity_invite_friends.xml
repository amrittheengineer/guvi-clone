<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".InviteFriendsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite Friends"
            style="@style/headerStyle"
            android:layout_marginTop="24dp"
            android:id="@+id/txt_invite_head"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_invite_body"
            android:layout_below="@+id/txt_invite_head"
            android:layout_marginTop="12dp"
            style="@style/textStyle"
            android:text="Share your awesome learning experience at\n story with your friends"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:scaleType="centerInside"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/txt_invite_body"
            android:src="@drawable/invite_background"
            android:id="@+id/invite_vector"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite via"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:id="@+id/txt_invite_btn_head"
            android:layout_below="@id/invite_vector"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_invite_btn_head"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_margin="24dp"
            >
            <ImageView
                style="@style/invite_social_icon"
                android:src="@drawable/ic_facebook"
                />
            <ImageView
                style="@style/invite_social_icon"
                android:src="@drawable/ic_whatsapp"
                />
            <ImageView
                style="@style/invite_social_icon"
                android:src="@drawable/ic_twitter"
                />
            <ImageView
                style="@style/invite_social_icon"
                android:src="@drawable/ic_telegram"
                />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>