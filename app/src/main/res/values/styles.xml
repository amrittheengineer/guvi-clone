<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="invite_social_icon">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">64dp</item>
        <item name="contentDescription">Share on social media</item>
    </style>
    <style name="follow_social_icon">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="contentDescription">Share on social media</item>
    </style>

    <style name="textStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="headerStyle" parent="textStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="contactViaStyle" parent="textStyle">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>